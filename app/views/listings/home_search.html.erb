<script type="text/javascript">
	function showListing(id)
  {
    $.ajax
    ({
      type: "GET",
      url: "/listings/"+id,
      success: function (data){
        $("#result_data").html(data);
        $('#listingPanel').hide();
        $('#ListingBack').show();
        $('#editButtonsDiv').hide();
        $('#rightCheck').hide();
        $('#downLinkAttach').hide();
        $('#ContactLink').show();
      }
    });

  }

  $('#search').click(function(){
    $.ajax
    ({
      type: "POST",
      data: $("form").serialize(),
      url: "/my_search_listing",
      success: function (data){
        $("#result_data").html("");
        $('#listingPanel').html(data);
        //$('#ListingBack').show();
        
      }
    });

  });

  
</script>